<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.jawafai">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Jawafai"
        tools:targetApi="31">

        <!-- ✅ Launcher activity: WelcomeActivity -->
        <activity
            android:name=".view.WelcomeActivity"
            android:exported="true"
            android:label="@string/title_activity_welcome2"
            android:theme="@style/Theme.Jawafai">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ Other activities -->
        <activity
            android:name=".view.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.Jawafai" />

        <activity
            android:name=".view.ProfileActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.Jawafai" />

        <activity
            android:name=".view.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Jawafai" />

        <activity
            android:name=".view.RegistrationActivity"
            android:exported="true"
            android:label="@string/title_activity_registrattion2"
            android:theme="@style/Theme.Jawafai" />

    </application>

</manifest>
